{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["node_modules"]
}